set nu

" colorcheme
syntax on
colorscheme wonka-dark
highlight LineNr ctermfg=NONE ctermbg=NONE
highlight CursorLine cterm=NONE ctermbg=blue ctermfg=LightGray

set cursorline
"set cursorcolumn
set nohlsearch

" fold
set foldlevel=99

" tabs
set tabstop=2
set shiftwidth=2
set smarttab

"shortcuts
set pastetoggle=<F2>
