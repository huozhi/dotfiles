	helper = osxkeychain
[alias]
  blm = "!f() { git blame \"$@\" | ccat; }; f"
  lg = "log --all --decorate --oneline --graph"
  stat = "diff --stat origin/master HEAD"
  tagcommit = "rev-list -n 1"
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[core]
  editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
	default = current
[color]
	ui = true
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
